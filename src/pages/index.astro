---
import PageLayout from '@layouts/PageLayout.astro';
import StackCard from '@components/StackCard.astro';
import { SITE, SOCIALS } from '@consts';
import TwinklingStars from '@components/TwinklingStars.astro';
import MeteorShower from '@components/MeteorShower.astro';

const fe_stack = [
  {
    text: 'React',
    icon: 'react',
    href: 'https://reactjs.org',
  },
  {
    text: 'Astro',
    icon: 'astro',
    href: 'https://astro.build',
  },
  {
    text: 'Javascript',
    icon: 'javascript',
    href: 'https://www.javascript.com',
  },
  {
    text: 'Typescript',
    icon: 'typescript',
    href: 'https://www.typescriptlang.org',
  },
  {
    text: 'Tailwind',
    icon: 'tailwind',
    href: 'https://tailwindcss.com',
  },
  {
    text: 'Bootstrap',
    icon: 'bootstrap',
    href: 'https://getbootstrap.com',
  },
  {
    text: 'HTML5',
    icon: 'html5',
    href: 'https://developer.mozilla.org/en-US/docs/Web/Guide/HTML/HTML5',
  },
  {
    text: 'CSS',
    icon: 'css',
    href: 'https://developer.mozilla.org/en-US/docs/Web/CSS',
  },
];

const be_stack = [
  {
    text: 'Node.js',
    icon: 'nodejs',
    href: 'https://nodejs.org',
  },
  {
    text: 'Express',
    icon: 'express',
    href: 'https://expressjs.com',
  },
  {
    text: 'Deno',
    icon: 'deno',
    href: 'https://deno.land',
  },
  {
    text: 'Python',
    icon: 'python',
    href: 'https://www.python.org',
  },
  {
    text: 'Flask',
    icon: 'flask',
    href: 'https://flask.palletsprojects.com',
  },
  {
    text: 'Java',
    icon: 'java',
    href: 'https://www.java.com',
  },
  {
    text: 'SpringBoot',
    icon: 'springboot',
    href: 'https://spring.io/projects/spring-boot',
  },
];

const cloud_stack = [
  {
    text: 'AWS',
    icon: 'aws',
    href: 'https://aws.amazon.com',
  },
  {
    text: 'Cloudflare',
    icon: 'cloudflare',
    href: 'https://www.cloudflare.com',
  },
  { text: 'Heroku', icon: 'heroku', href: 'https://www.heroku.com' },
  {
    text: 'Vercel',
    icon: 'vercel',
    href: 'https://vercel.com',
  },
  { text: 'Linux', icon: 'linux', href: 'https://www.linux.org' },
  { text: 'Docker', icon: 'docker', href: 'https://www.docker.com' },
  { text: 'FreeBSD', icon: 'freebsd', href: 'https://freebsd.org' },
  {
    text: 'Firebase',
    icon: 'firebase',
    href: 'https://firebase.google.com',
  },
];

const storage_stack = [
  {
    text: 'MySQL',
    icon: 'mysql',
    href: 'https://www.mysql.com',
  },
  {
    text: 'PostgreSQL',
    icon: 'postgresql',
    href: 'https://www.postgresql.org',
  },
  {
    text: 'MongoDB',
    icon: 'mongodb',
    href: 'https://www.mongodb.com',
  },
  {
    text: 'S3',
    icon: 'aws',
    href: 'https://aws.amazon.com/s3',
  },
  {
    text: 'SQLite',
    icon: 'sqlite',
    href: 'https://www.sqlite.org',
  },
];
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <!-- Light Mode: Particles -->
  <div class="absolute inset-0 block dark:hidden">
    <div id="particles1" class="fixed inset-0"></div>
    <div id="particles2" class="fixed inset-0"></div>
    <div id="particles3" class="fixed inset-0"></div>
  </div>

  <!-- Dark Theme: Stars -->
  <div class="absolute inset-0 bg-black hidden dark:block">
    <div id="stars1" class="fixed inset-0"></div>
    <div id="stars2" class="fixed inset-0"></div>
    <div id="stars3" class="fixed inset-0"></div>
  </div>

  <!-- Dark Theme: Twinkling Stars / Metors -->
  <div id="galaxy" class="fixed inset-0">
    <div class="hidden dark:block">
      <TwinklingStars />
      <MeteorShower />
    </div>
  </div>

  <script is:inline src="/js/bg.js"></script>

  <!-- HERO -->
  <section class="relative h-screen w-full">
    <div
      id="planetcont"
      class="animate absolute inset-0 top-1/4 overflow-hidden"
    >
      <div
        id="crescent"
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[250vw] min-h-[100vh] aspect-square rounded-full p-[1px] bg-gradient-to-b from-black/25 dark:from-white/75 from-0% to-transparent to-5%"
      >
        <div
          id="planet"
          class="w-full h-full bg-white dark:bg-black rounded-full p-[1px] overflow-hidden flex justify-center"
        >
          <div
            id="blur"
            class="w-full h-20 rounded-full bg-neutral-900/25 dark:bg-white/25 blur-3xl"
          >
          </div>
        </div>
      </div>
    </div>
    <div
      class="animate absolute h-full w-full flex items-center justify-center"
    >
      <div class="relative w-full h-full flex items-center justify-center">
        <div class="p-5 text-center">
          <p
            class="animated text-lg md:text-xl lg:text-2xl font-semibold opacity-75"
          >
            Hello, I am ...
          </p>
          <p
            class="animated text-2xl md:text-3xl lg:text-4xl font-bold uppercase text-black dark:text-white"
          >
            Dong Huang
          </p>
          <p class="animated text-sm md:text-base lg:text-lg opacity-75">
            Currently starting another life.
          </p>
          <div
            id="ctaButtons"
            class="animated flex flex-wrap gap-4 justify-center mt-5"
          >
            <a
              href="/blog"
              class="py-2 px-4 rounded truncate text-xs md:text-sm lg:text-base bg-black dark:bg-white text-white dark:text-black hover:opacity-75 blend"
            >
              Read my blog
            </a>
            <a
              href="/work"
              class="py-2 px-4 truncate rounded text-xs md:text-sm lg:text-base border border-black/25 dark:border-white/25 hover:bg-black/5 hover:dark:bg-white/15 blend"
            >
              View my work
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="relative bg-white dark:bg-black">
    <div class="mx-auto max-w-screen-sm p-5 space-y-24 pb-16">
      <!-- About Section -->
      <section class="animate">
        <article>
          <p>
            I am a <b><i>software engineer</i></b>, <b
              ><i>system architect</i></b
            >, <b><i>product planner</i></b>, <b><i>mentor</i></b>, <b
              ><i>student</i></b
            >, <b><i>minimalist</i></b>, <b><i>eternal optimist</i></b>, <b
              ><i>voyageur</i></b
            >, <b><i>accountant</i></b> and <b
              ><i>unlicensed financial planner</i></b
            >.
          </p>
          <p>
            I love life and the people around me. I enjoy observing things and
            people, trying to understand the causes and effects behind
            everything, then creating or destroying something. Every day, I
            passionately use new technologies to improve work, study, and life.
          </p>
          <p>During my career</p>
          <p>
            I have built various products, from my first DOS program that I
            sold, to Windows applications, complex enterprise systems, and
            large-scale online services used by millions daily. I have also
            taught people aged 8 to 50 how to use computers and learn
            programming, helping them empower their work and lives. Most
            importantly, I focus every day on combining different technologies
            to deliver fast and elegant code and architecture to help people
            achieve their desired outcomes.
          </p>
          <p>Now</p>
          <p>
            I am currently a teacher, helping people learn computer programming
            through online bootcamps. While gradually adapting to the local
            language and culture, I am also thinking about what other
            interesting things I could do.
          </p>
        </article>
      </section>

      <!-- Tech Stack Section -->
      <section class="animate">
        <div class="space-y-4">
          <p class="font-semibold text-black dark:text-white">
            The technologies I use
          </p>
          <p>Frontend</p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {
              fe_stack.map((item) => (
                <StackCard text={item.text} icon={item.icon} href={item.href} />
              ))
            }
          </div>
          <p>Backend</p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {
              be_stack.map((item) => (
                <StackCard text={item.text} icon={item.icon} href={item.href} />
              ))
            }
          </div>
          <p>Cloud Service</p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {
              cloud_stack.map((item) => (
                <StackCard text={item.text} icon={item.icon} href={item.href} />
              ))
            }
          </div>
          <p>Dababase & Storage</p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {
              storage_stack.map((item) => (
                <StackCard text={item.text} icon={item.icon} href={item.href} />
              ))
            }
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="animate">
        <div>
          <p class="font-semibold text-black dark:text-white">
            Let's Connect
          </p>
          <p>
            Reach out to me via email or on social media.
          </p>
          <div class="grid grid-cols-4 gap-y-2 mt-4 auto-cols-min">
            {SOCIALS.map(social => (
              <div class="col-span-1 flex items-center gap-1">
                <span class="whitespace-nowrap truncate">
                  {social.NAME}
                </span>
              </div>
              <div class="col-span-3 truncate">
                <a href={social.HREF} target="_blank" class="w-fit col-span-3 group flex gap-1 items-center underline decoration-[.5px] decoration-black/25 dark:decoration-white/50 hover:decoration-black dark:hover:decoration-white text-black dark:text-white underline-offset-2 blend">
                  <span class="text-black/75 dark:text-white/75 group-hover:text-black group-hover:dark:text-white blend">
                    {social.TEXT}
                  </span>
                </a>
              </div>
            ))}
        </div>
      </section>

    </div>
  </div>
</PageLayout>
